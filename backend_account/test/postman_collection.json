{
    "info": {
        "name": "backend_account - smoke tests",
        "_postman_id": "11111111-1111-1111-1111-111111111111",
        "description": "Collection to test auth and control flows for backend_account",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:4000"
        },
        {
            "key": "adminUser",
            "value": "admin"
        },
        {
            "key": "adminPass",
            "value": "adminpass"
        },
        {
            "key": "deviceId",
            "value": "esp32_1"
        }
    ],
    "item": [
        {
            "name": "Login as admin",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/accounts/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "accounts",
                        "login"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"{{adminUser}}\",\n  \"password\": \"{{adminPass}}\"\n}"
                }
            }
        },
        {
            "name": "Create user (admin)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/accounts",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "accounts"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"userpass\",\n  \"role\": \"user\",\n  \"modules\": []\n}"
                }
            }
        },
        {
            "name": "Login as testuser",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/accounts/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "accounts",
                        "login"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"userpass\"\n}"
                }
            }
        },
        {
            "name": "Control device without permission (should 403)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token_user}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/devices/{{deviceId}}/control",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "devices",
                        "{{deviceId}}",
                        "control"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{ \"action\": { \"type\": \"toggle\", \"value\": \"on\" } }"
                }
            }
        },
        {
            "name": "Grant control permission to testuser (admin)",
            "request": {
                "method": "PATCH",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/accounts/{{test_user_id}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "accounts",
                        "{{test_user_id}}"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{ \"modules\": [ { \"moduleId\": \"{{deviceId}}\", \"canRead\": true, \"canControl\": true } ] }"
                }
            }
        },
        {
            "name": "Control device with permission (should 202)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token_user}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/devices/{{deviceId}}/control",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "devices",
                        "{{deviceId}}",
                        "control"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{ \"action\": { \"type\": \"toggle\", \"value\": \"off\" } }"
                }
            }
        }
    ]
}